<Window x:Class="RealTimeTranslator.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealTimeTranslator"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
	<Grid>
		<StackPanel>
			<StackPanel Orientation="Horizontal">
				<Label Content="Распознаваемый язык: "/>
				<ComboBox x:Name="LangsCB" ItemsSource="{Binding Path=Langs}" Width="150" SelectionChanged="LangsComboBox_SelectionChanged"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
